@model Grapher.Models.TaskItem

@{
    ViewData["Title"] = "Task Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark">@Model.Title</h2>
    <div class="d-flex gap-2">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-secondary rounded-pill px-4">Edit</a>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Back to List</a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-0 shadow-sm" style="border-radius: 12px;">
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 fw-bold">Project</dt>
                    <dd class="col-sm-8">@((Model.Project != null) ? Model.Project.Title : "N/A")</dd>

                    <dt class="col-sm-4 fw-bold">Created By</dt>
                    <dd class="col-sm-8">@Model.Creator?.UserName ?? "Unknown"</dd>

                    <dt class="col-sm-4 fw-bold">Title</dt>
                    <dd class="col-sm-8">@Model.Title</dd>

                    <dt class="col-sm-4 fw-bold">Description</dt>
                    <dd class="col-sm-8">@(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "<span class=\"text-muted\">None</span>")</dd>

                    <dt class="col-sm-4 fw-bold">Status</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-light text-dark border">@Model.Status</span>
                    </dd>

                    <dt class="col-sm-4 fw-bold">Start Date</dt>
                    <dd class="col-sm-8">
                        @if (Model.StartDate != default)
                        {
                        <span>@Model.StartDate.ToString("MMMM dd, yyyy")</span>
                        }
                        else
                        {
                        <span class="text-muted">Not set</span>
                        }
                    </dd>

                    <dt class="col-sm-4 fw-bold">End Date</dt>
                    <dd class="col-sm-8">
                        @if (Model.EndDate.HasValue)
                        {
                        <span>@Model.EndDate.Value.ToString("MMMM dd, yyyy")</span>
                        }
                        else
                        {
                        <span class="text-muted">Not set</span>
                        }
                    </dd>

                    <dt class="col-sm-4 fw-bold">Assigned To</dt>
                    <dd class="col-sm-8">
                        @if (Model.Assignments != null && Model.Assignments.Any())
                        {
                        <div class="d-flex flex-wrap gap-1">
                            @foreach (var a in Model.Assignments)
                                {
                            <span class="badge bg-secondary text-white">@a.User?.UserName ?? a.UserId</span>
                                }
                        </div>
                        }
                        else
                        {
                        <span class="text-muted">No assignees</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
