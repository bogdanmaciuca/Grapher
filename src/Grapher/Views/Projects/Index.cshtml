@model IEnumerable<Grapher.Models.Project>

    @{
    ViewData["Title"] = "My Projects";
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">My Projects</h2>
        <a asp-action="Create" class="btn btn-primary shadow-sm rounded-pill px-4">+ New Project</a>
    </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var item in Model)
        {
        <div class="col">
            <div class="card h-100 border-0 shadow-sm shadow-hover" style="border-radius: 12px; transition: 0.2s;">
                <div class="card-body d-flex flex-column">

                    <div class="mb-3">
                        <h5 class="card-title fw-bold mb-1">
                            <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark stretched-link">
                                @item.Title
                            </a>
                        </h5>
                        <small class="text-muted">
                            Created @item.CreatedAt.ToString("MMM dd, yyyy")
                        </small>
                    </div>

                    <div class="mt-auto pt-3 border-top d-flex justify-content-between align-items-center">
                        <span class="badge bg-light text-dark border">
                            ðŸ‘¤ @(item.Organizer?.UserName ?? "Me")
                        </span>
                    </div>

                </div>

                <div class="card-footer bg-white border-0 pt-0 pb-3">
                    <div class="d-flex justify-content-end gap-2" style="position: relative; z-index: 2;">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary rounded-pill px-3">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger rounded-pill px-3">Delete</a>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>

    @if (!Model.Any())
    {
    <div class="text-center py-5 text-muted">
        <div class="display-1 mb-3">ðŸ“­</div>
        <h4>No projects yet</h4>
        <p>Create your first project to get started!</p>
    </div>
    }
