@model Grapher.Models.Project

    @{
    ViewData["Title"] = "Delete Project";
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">@ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Back to List</a>
    </div>

    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Are you sure?</h4>
        <p>You are about to permanently delete the project titled "<strong>@Model.Title</strong>". This action cannot be undone.</p>
        <hr>
        <p class="mb-0">All associated data, including tasks, will be lost.</p>
    </div>

    <div class="card border-0 shadow-sm" style="border-radius: 12px;">
        <div class="card-body">
            <h5 class="card-title fw-bold">Project Details</h5>
            <dl class="row mt-3">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>
                <dd class="col-sm-9">
                    @Model.CreatedAt.ToString("MMMM dd, yyyy, hh:mm tt")
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Organizer)
                </dt>
                <dd class="col-sm-9">
                    @(Model.Organizer != null ? Model.Organizer.UserName : "N/A")
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Cancel</a>
                <input type="submit" value="Delete" class="btn btn-danger rounded-pill px-4" />
            </div>
        </form>
    </div>
